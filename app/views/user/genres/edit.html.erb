<h2>ジャンル名編集</h2>

<!--エラーメッセージ表示-->
<% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーが発生しました
    <ul>
        <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @genre do |f| %>
<p>ジャンル名</p>
<%= f.text_field :name %>
<%= f.submit '保存' %>
<% end %>