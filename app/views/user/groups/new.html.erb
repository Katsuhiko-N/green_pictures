<h2>新規グループ作成</h2>

<!--エラーメッセージ表示-->
<% if @group.errors.any? %>
    <%= @group.errors.count %>件のエラーが発生しました
    <ul>
        <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>


<div class="mx-auto">
        <%= form_with model: @group do |f| %>
        
        <p>画像</p>
        <%= f.file_field :g_image, accept: "image/*" %>
        
        <p>タイトル</p>
        <%= f.text_field :title %>
        
        <p>説明文</p>
        <%= f.text_area :body, size: "60x5", placeholder:"100文字以内で入力してください" %>
        
        <%= f.submit 'グループを作成' %>
        <% end %>
</div>