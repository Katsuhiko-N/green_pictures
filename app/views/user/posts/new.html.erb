<h2>新規投稿</h2>

<!--エラーメッセージ表示-->
<% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<% if @tag.errors.any? %>
    <%= @tag.errors.count %>件のエラーが発生しました
    <ul>
        <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>


<div class="mx-auto">
    <%= form_with model: @post do |f| %>
    
    <p>画像</p>
    <%= f.file_field :image, accept: "image/" %>
    
    <p>タイトル</p>
    <%= f.text_field :title %>
    
    <p>説明文</p>
    <%= f.text_area :body %>
    
    <%= fields_for @tag do |tag| %>
        <p>タグ</p>
        <%= tag.text_area :name, size: "30x2", placeholder: "タグを入力（15文字以内）" %>
        <P>タグは投稿後から設定可能です</P>
    <% end %>
    
    <%= f.submit '保存' %>
    <% end %>
</div>