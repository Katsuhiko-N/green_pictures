<h2>タグ一覧</h2>

<table class="container-fluid">
    <thead>
        <tr class="row table-border-l">
            <th class="col-8"><p>タグ名</p></td>
            <th class="col-2"><p>関連投稿数</p></td>
            <th class="col-2"><p>一覧へのリンク</p></td>
        </tr>
    </thead>
    <tbody>
        <% @tags.each do |tag| %>
        <tr class="row table-border-s">
            <td class="col-8"><p><%= tag.name %></p></td>
            <td class="col-2"><p><%= tag.tag_lists.count %>件</p></td>
            <td class="col-2">
                <%= link_to search_path(:model => "tag_index", :word => "#{tag.name}") do %>
                    <p class="btn btn-info">一覧</p>
                <% end %>
            </td>
        </tr>
        <% end %>
        <%= paginate @tags %>
    </tbody>
</table>