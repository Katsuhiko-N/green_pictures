<h2>検索結果</h2>

<% if defined? @answer_p %>
    <table>
        <thead>
            <tr class="table-border-l">
                <th><p>画像</p></th>
                <th><p>タイトル</p></th>
                <th><p>投稿者</p></th>
            </tr>
        </thead>
        <tbody>
            <% @answer_p.each do |post| %>
            <tr class="table-border-s">
                <td>
                    <%= link_to post_path(post.id) do %>
                        <%= image_tag post.image, size: "80x80" %>
                    <% end %>
                </td>
                <td>
                    <%= link_to post_path(post.id) do %>
                        <%= post.title %>
                    <% end %>
                </td>
                <td>
                    <%= link_to user_path(post.user.id) do %>
                        <%= post.user.nickname %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <table>
        <thead>
            <tr class="table-border-l">
                <th><p>画像</p></th>
                <th><p>投稿者</p></th>
            </tr>
        </thead>
        <tbody>
            <%= @answer_u.each do |user| %>
            <tr class="table-border-s">
                <td>
                    <%= link_to user_path(user.id) do %>
                        <%= image_tag user.show_p_img(60,60), size: "60x60" %>
                    <% end %>
                </td>
                <td>
                    <%= link_to user_path(user.id) do %>
                        <%= user.nickname %>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>