<!--検索バー-->
<div>
    <%= form_with url: search_path, method: :get do |f| %>
    <!--検索ワード:word-->
    <%= f.text_field :word %>
    
    <!--検索モデル選択（投稿・ユーザー名）-->
    <%= f.radio_button :model, :post, checked: true %>
    <%= f.label :model, "投稿で検索" %>
    
    <%= f.radio_button :model, :user %>
    <%= f.label :model, "ユーザー名で検索" %>
    
    <%= f.submit "検索" %>
    <% end %>
</div>
